%h1 Listing galleries

%table
  %thead
    %tr
      %th Preview
      %th Name
      %th
      %th
      %th

  %tbody
    - @galleries.each do |gallery|
      %tr
        - if gallery.pictures.count > 0
          %td= link_to image_tag(gallery.pictures.first.image.url(:thumb)), gallery_path(gallery)
        - else 
          %td no pictures
        %td= gallery.name
        %td= link_to 'Show', gallery
        %td= link_to 'Edit', edit_gallery_path(gallery)
        %td= link_to 'Destroy', gallery, :method => :delete, :data => { :confirm => 'Are you sure?' }
%br

= link_to 'New Gallery', new_gallery_path
